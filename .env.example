# Application Configuration
APP_NAME="Gulf eCommerce Platform"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://gulfecommerce.local
APP_TIMEZONE=Asia/Dubai
APP_LOCALE=ar
APP_FALLBACK_LOCALE=en

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=gulf_ecommerce
DB_USERNAME=root
DB_PASSWORD=

# Cache Configuration
CACHE_DRIVER=redis
CACHE_HOST=127.0.0.1
CACHE_PORT=6379

# Queue Configuration
QUEUE_CONNECTION=redis

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@gulfecommerce.com
MAIL_FROM_NAME="${APP_NAME}"

# Payment Gateways Configuration
PAYTABS_MERCHANT_EMAIL=
PAYTABS_SECRET_KEY=
TELR_STORE_ID=
TELR_AUTH_KEY=
TELR_TEST_MODE=true
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=

# Multi-Vendor Configuration
MULTI_VENDOR_ENABLED=true
VENDOR_COMMISSION_TYPE=percentage
VENDOR_COMMISSION_PERCENTAGE=10

# Supported Currencies
SUPPORTED_CURRENCIES=SAR,AED,KWD,QAR,OMR,USD
DEFAULT_CURRENCY=SAR

# Shipping Configuration
SHIPPING_ENABLED=true
ARAMEX_API_KEY=
SMSA_API_KEY=
