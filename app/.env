APP_NAME="Gulf eCommerce Platform"
APP_ENV=local
APP_KEY=base64:YOUR_APP_KEY_HERE
APP_DEBUG=true
APP_URL=http://localhost

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=gulf_ecommerce
DB_USERNAME=root
DB_PASSWORD=root
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Cache & Session
CACHE_DRIVER=redis
SESSION_DRIVER=redis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=noreply@gulfecommerce.local
MAIL_FROM_NAME="${APP_NAME}"

# Application Settings
APP_LOCALE=ar
APP_FALLBACK_LOCALE=en
APP_TIMEZONE=Asia/Riyadh

# Multi-Vendor Settings
MULTI_VENDOR_ENABLED=true
VENDOR_COMMISSION_RATE=15

# Multi-Currency Settings
DEFAULT_CURRENCY=SAR
ALLOWED_CURRENCIES=SAR,AED,KWD,QAR,OMR,USD

# Payment Gateway Configuration
STRIPE_PUBLIC_KEY=pk_test_xxxxx
STRIPE_SECRET_KEY=sk_test_xxxxx

PAYPAL_MODE=sandbox
PAYPAL_SANDBOX_CLIENT_ID=xxxxx
PAYPAL_SANDBOX_CLIENT_SECRET=xxxxx

# AWS Configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug
